
<div class="container py-5">
  <h1 class="fw-bold mb-4">Edit Campaign</h1>

  <%= form_with model: @campaign, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3">
      <%= form.label :total_reward_amount, class: "form-label" %>
      <%= form.number_field :total_reward_amount, class: "form-control", step: 1, min: 0 %>
    </div>

    <div class="mb-3">
      <%= form.label :brand_url, class: "form-label" %>
      <%= form.url_field :brand_url, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="mt-4">
      <%= form.submit "Save changes", class: "btn btn-primary rounded-pill px-4" %>
    </div>
  <% end %>
</div>
